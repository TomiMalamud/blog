---
import { Icon } from 'astro-icon';
---

<div class="container">
	<!-- Begin Mailchimp Signup Form -->
	<div id="mc_embed_signup">
		<form
			action="https://rohisommiers.us5.list-manage.com/subscribe/post?u=548e1cccd3d2bbeb67f4dd28c&id=ee8d65fe69&f_id=00d5f2ebf0"
			method="post"
			id="mc-embedded-subscribe-form"
			name="mc-embedded-subscribe-form"
			class="validate w-full"
			target="_self"
		>
			<div id="mc_embed_signup_scroll">
				<div class="mc-field-group">
					<label for="mce-EMAIL" class="sr-only">Email <span class="asterisk">*</span></label>
					<input
						type="email"
						value=""
						name="EMAIL"
						class="required email mt-1 block w-full mb-2 border-2 rounded-md py-2 sm:py-3 px-3 sm:px-3.5 text-md"
						id="mce-EMAIL"
						placeholder="tu email"
						required
					/>
				</div>
				<div id="mce-responses" class="clear foot">
					<div class="response" id="mce-error-response" style="display:none"></div>
					<div class="response" id="mce-success-response" style="display:none"></div>
				</div>
				<!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
				<div style="position: absolute; left: -5000px;" aria-hidden="true">
					<input type="text" name="b_548e1cccd3d2bbeb67f4dd28c_ee8d65fe69" tabindex="-1" value="" />
				</div>
				<button
					type="submit"
					value="Subscribe"
					name="subscribe"
					id="mc-embedded-subscribe"
					class="btn btn-primary sm:mb-0 py-2 sm:py-2.5 sm:px-5 rounded-md w-full text-md group"
					id="subscribe"
				>
					Suscribirme <Icon name="tabler:send" class="w-5 h-5 ml-1.5 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 group-focus:translate-x-0.5 group-focus:-translate-y-0.5 transition ease-in duration-200" />

				</button>
			</div>
		</form>
	</div>
</div>

<!--End mc_embed_signup-->
